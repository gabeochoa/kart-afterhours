{
    "makefile.launchConfigurations": [
        {
            "cwd": "f:\\VSCode\\kart-afterhours\\output",
            "binaryPath": "f:\\VSCode\\kart-afterhours\\output\\kart.exe",
            "binaryArgs": []
        }
    ],
    "files.associations": {
        "filesystem": "cpp"
    },
    // C++ formatting settings
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
    "[h]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
    "[hpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
    "clangd.arguments": [
        "--clang-tidy",
        "--header-insertion=never",
        "--completion-style=detailed"
    ],
    // Only format files in specific directories
    "files.exclude": {
        "**/vendor/backward": true,
        "**/vendor/catch2": true,
        "**/vendor/fmt": true,
        "**/vendor/glm": true,
        "**/vendor/imgui": true,
        "**/vendor/json": true,
        "**/vendor/nlohmann": true,
        "**/vendor/spdlog": true,
        "**/vendor/stb": true,
        "**/vendor/glfw": true,
        "**/vendor/magic_enum": true,
        "**/vendor/raylib": true,
        "**/vendor/sago": true,
        "**/vendor/afterhours/vendor/**": true,
    },
    "files.watcherExclude": {
        "**/vendor/*": true,
        "!**/vendor/afterhours/**": false
    }
}